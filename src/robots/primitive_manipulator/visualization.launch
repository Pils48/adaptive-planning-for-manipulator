<launch>
    <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find robots)primitive_manipulator/primitive_manipulator.xacro'"/>
    
    <param name="robot_description_semantic" textfile="$(find robots)/primitive_manipulator/primitive_manipulator_srdf.xacro" />

    <node name="robot_state_publisher" pkg="robot_state_publisher" type="state_publisher"/>
    <node name="rviz" pkg="rviz" type="rviz"/>
    
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" >
        <param name="use_gui" value="False"/>
    </node>

    <group ns="$robot_description_kinematics">
        <rosparam command="load" file="$(find robots)/primitive_manipulator/kinematics.yaml"/>
    </group>

</launch>